<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ws.wolfsoft.movie2.MainActivity"
    android:background="#16171b"
    >




        <ImageView
            android:id="@+id/img"
            android:layout_width="200dp"
            android:layout_height="116dp"
            android:background="@drawable/ss"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="110dp"
            />


    <LinearLayout
        android:id="@+id/title"
        android:layout_below="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


    <LinearLayout

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BREAKING BAD"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="35dp"
            />

        <customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drama - 1h - 2008"
            android:textColor="#fff"
            android:textSize="13dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="35dp"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_weight="-0.2"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:orientation="horizontal"
        android:background="@drawable/circle"
        android:padding="16dp"
        >

        <customfonts.MyTextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.5"
            android:textColor="@color/colorpink"
            android:textSize="23.5dp"
            />


        <customfonts.MyTextView
            android:layout_gravity="bottom"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/10"
            android:textColor="#64656a"
            android:textSize="11dp"
            />

    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/detailbox"
        android:layout_below="@+id/title"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect"
        android:orientation="vertical"
        android:layout_marginTop="26dp"
        >


        <customfonts.MyTextView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD TO WATCHLIST"
            android:layout_marginTop="6dp"
            android:textSize="14dp"
            android:textColor="@color/colorTex"
            android:layout_marginLeft="22dp"
            android:inputType="text"
            android:padding="14dp"
            android:drawableLeft="@drawable/heart"
            android:drawablePadding="22dp"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/div" />


        <customfonts.MyTextView
            android:id="@+id/show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHOW LAST EPISOD"
            android:layout_marginTop="6dp"
            android:textSize="14dp"
            android:textColor="@color/colorTex"
            android:layout_marginLeft="22dp"
            android:inputType="text"
            android:padding="14dp"
            android:drawableLeft="@drawable/menu"
            android:drawablePadding="14dp"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/div" />

        <customfonts.MyTextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHOW DETAILS"
            android:layout_marginTop="6dp"
            android:textSize="14dp"
            android:textColor="@color/colorTex"
            android:layout_marginLeft="22dp"
            android:inputType="text"
            android:padding="14dp"
            android:drawableLeft="@drawable/ptv"
            android:drawablePadding="22dp"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/div" />
    </LinearLayout>


    <LinearLayout
            android:layout_below="@+id/detailbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

        >



        <customfonts.MyTextView
            android:layout_marginTop="56dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CLOSE"
            android:textColor="@color/colorpink"
            android:gravity="center"

            />

        </LinearLayout>






</RelativeLayout>
